// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Product {
  id    String @id @default(cuid())
  name  String
  price Float
  stock Int

  saleItems SaleItem[]
}

model Customer {
  id    String @id @default(cuid())
  name  String
  email String @unique()

  sales Sale[]
}

model Sale {
  id         String   @id @default(cuid())
  date       DateTime @default(now())
  total      Float
  customerId String
  customer   Customer @relation(fields: [customerId], references: [id], onDelete: Cascade)
  items      SaleItem[]
}

model SaleItem {
  id        String  @id @default(cuid())
  quantity  Int
  price     Float // Price at the time of sale
  saleId    String
  sale      Sale    @relation(fields: [saleId], references: [id], onDelete: Cascade)
  productId String
  product   Product @relation(fields: [productId], references: [id], onDelete: Restrict) // Prevent product deletion if it's in a sale
}
